<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Hover / focused / pressed -->
    <item android:state_hovered="true" android:drawable="@color/card_hover" />
    <item android:state_focused="true" android:drawable="@color/card_hover" />
    <item android:state_pressed="true" android:drawable="@color/card_hover" />

    <!-- Default -->
    <item android:drawable="@color/card_default" />

</selector>
