<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- ========= MAIN CONTENT ========= -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop"
            android:alpha="0.12" />

        <!-- Scrim overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3FFFFFF" />

        <!-- Foreground layout -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Row 1: Hamburger + Search -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <ImageButton
                    android:id="@+id/btnHamburger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_menu_icon"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    app:tint="@android:color/black" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:iconifiedByDefault="false"
                    android:queryHint="Search sentences" />
            </LinearLayout>

            <!-- Row 2: Logo + Title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tiwi_logo"
                    android:contentDescription="@string/app_name"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiwi Language Practice"
                    android:textStyle="bold"
                    android:textColor="#1B1B1B"
                    android:textSize="20sp"/>
            </LinearLayout>

            <!-- Role banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/roleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Rounded12">

                <LinearLayout
                    android:id="@+id/roleBadge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/role_badge_bg"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <ImageView
                        android:id="@+id/ivRole"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="10dp"
                        app:tint="@android:color/white"
                        android:src="@drawable/ic_teacher" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRolePrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, Teacher"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvRoleSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You are logged in as Teacher"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Logout button -->
                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="@drawable/logout_button_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sentence list -->
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp"
                android:clipToPadding="false"
                android:padding="4dp" />

            <!-- Bottom navigation -->
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNav"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="?attr/colorSurface"
                app:menu="@menu/main_bottom_nav"
                app:labelVisibilityMode="labeled"
                app:itemIconTint="@null"
                app:itemTextColor="@color/bottom_nav_selector"
                app:itemRippleColor="?attr/colorControlHighlight"/>
        </LinearLayout>

        <!-- Floating Add Sentence button (Teacher only) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddSentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="100dp"
            android:contentDescription="Add Sentence"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/teal_700"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- ========= NAV DRAWER ========= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_drawer"
        app:itemIconSize="32dp"
        app:itemIconTint="@null" />
</androidx.drawerlayout.widget.DrawerLayout>
