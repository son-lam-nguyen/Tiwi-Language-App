<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiwi Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tiwi_logo"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:adjustViewBounds="true" />

        <!-- App Title -->
        <TextView
            android:id="@+id/tvWelcome"
            android:text="Welcome to Tiwi Language Practice"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:text="An interactive language-practice app that helps teachers and students practice the Tiwi language through voice recording and comparison."
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#555555"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Student Button -->
        <Button
            android:id="@+id/btnStudent"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text=" I am a Student"
            android:textSize="18sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_student"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium" />

        <!-- Teacher Button -->
        <Button
            android:id="@+id/btnTeacher"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text=" I am a Teacher"
            android:textSize="18sp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_teacher"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</ScrollView>
